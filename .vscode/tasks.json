{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Scheduler",
            "type": "shell",
            "command": "/Users/jasons/Source/github/forest_backend/forest_backend_env/bin/python",
            "args": [
                "${workspaceFolder}/forest_backend/scheduler/forest_scheduler.py"
            ]
        },
        {
            "label": "Run postgres",
            "type": "shell",
            "command": "pg_ctl",
            "args": [
                "-D", "/usr/local/var/postgres",
                "-l", "logfile",
                "restart"
            ]
        },
        {
            "label": "Stop postgres",
            "type": "shell",
            "command": "pg_ctl",
            "args": [
                "-D", "/usr/local/var/postgres",
                "stop"
            ]
        },
        {
            "label": "Run flask",
            "type": "shell",
            "isBackground": true,
            "command": "/Users/jasons/Source/github/forest_backend/forest_backend_env/bin/python",
            "options": {
                "env": {
                    "FLASK_APP": "forest_backend/api/app.py"
                }
              },
            "args": [
                "-m", "flask",
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "dependsOn": [
                "Run postgres"
            ],
            "presentation": {
                "reveal": "never",
                "panel": "new"
            }
        }
    ]
}